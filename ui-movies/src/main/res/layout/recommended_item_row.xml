<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/horizontal_guide_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="150dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recommended_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_guide_image"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recommended_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textAppearance="?textAppearanceListItemSecondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_image"
        tools:text="Top Gun" />

</androidx.constraintlayout.widget.ConstraintLayout>