<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Tmdb" parent="Base.Theme.Tmdb" />

    <style name="Base.Theme.Tmdb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Color-->
        <item name="colorPrimary">@color/tmdb_blue_700</item>
        <item name="colorPrimaryVariant">@color/tmdb_blue_800</item>
        <item name="colorSecondary">@color/tmdb_orange_500</item>
        <item name="colorSecondaryVariant">@color/tmdb_orange_400</item>

        <item name="android:colorBackground">@color/tmdb_blue_50</item>
        <item name="colorSurface">@color/tmdb_white_50</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorError">@color/tmdb_red_400</item>

        <item name="colorOnPrimary">@color/tmdb_white_50</item>
        <item name="colorOnSecondary">@color/tmdb_black_900</item>
        <item name="colorOnBackground">@color/tmdb_black_900</item>
        <item name="colorOnSurface">@color/tmdb_black_900</item>
        <item name="colorOnError">@color/tmdb_black_900</item>

        <item name="scrimBackground">@color/tmdb_white_50_alpha_060</item>
        <item name="android:statusBarColor">@color/tmdb_blue_50_alpha_060</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Tmdb.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Tmdb.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Tmdb.LargeComponent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Tmdb.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Tmdb.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Tmdb.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Tmdb.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Tmdb.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Tmdb.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Tmdb.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Tmdb.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Tmdb.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Tmdb.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Tmdb.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Tmdb.Overline</item>
        <item name="textAppearanceListItem">@style/TextAppearance.Tmdb.ListPrimary</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <!--Styles-->
        <item name="appBarLayoutStyle">@style/Widget.Tmdb.AppBar</item>
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="navigationViewStyle">@style/Widget.Tmdb.NavigationView</item>
        <item name="snackbarStyle">@style/Widget.Tmdb.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.Tmdb.SnackbarButton</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ThemeOverlay.Tmdb.Snackbar" parent="">
        <item name="colorPrimary">@color/tmdb_red_400</item>
        <item name="colorOnSurface">@color/tmdb_black_900</item>
    </style>

    <style name="ThemeOverlay.Tmdb.Chip.Filter" parent="">
        <item name="colorPrimary">@color/tmdb_orange_400</item>
    </style>
</resources>